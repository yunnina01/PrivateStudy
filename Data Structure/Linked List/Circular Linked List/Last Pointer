#include <stdio.h>
#include <stdlib.h>

typedef struct ListNode{
    int data;
    struct ListNode* link;
}ListNode;

void init(ListNode **last){
    *last = NULL;
}

ListNode* get_node(int item){
    ListNode* new_node = (ListNode*)malloc(sizeof(ListNode*));
    if(new_node == NULL)
        printf("Memory Allocation Error\n");
    else{
        new_node->data = item;
        new_node->link = new_node;
    }
    return new_node;
}

void add_first(ListNode** last, int item){
    ListNode* new_node = get_node(item);
    if(new_node == NULL)
        return;
    if(*last == NULL)
        *last = new_node;
    else{
        new_node->link = (*last)->link;
        (*last)->link = new_node;
    }
}

void add_last(ListNode** last, int item){
    add_first(last, item);
    if((*last)->link != NULL)
        *last = (*last)->link;
}

int get_length(ListNode* last){
    int cnt = 0;
    ListNode* temp = last;
    if(last != NULL){
        while(temp->link != last){
            temp = temp->link;
            cnt++;
        }
        cnt++;
    }
    return cnt;
}

void delete(ListNode** last, int pos){
    int length = get_length(*last);
    if(length == 0)
        printf("List is empty\n");
    else if(pos <= 0)
        printf("Position Input Error\n");
    else if(pos > length)
        printf("This position is empty\n");
    else{
        ListNode* temp = *last;
        if(length == 1){
            *last = NULL;
            free(temp);
            return;
        }
        for(int i=0; i<pos-1; i++){
            temp = temp->link;
        }
        ListNode* removed = temp->link;
        if(removed == (*last))
            *last = temp;
        temp->link = removed->link;
        free(removed);
    }
}

void clear(ListNode** last){
    if(*last == NULL)
        printf("List is empty\n");
    else
        init(last);
}

void replace(ListNode* last, int pos, int item){
    int length = get_length(last);
    ListNode* temp = last;
    if(length == 0)
        printf("List is empty\n");
    else if(pos <= 0)
        printf("Position Input Error\n");
    else if(pos > length)
        printf("This position is empty\n");
    else{
        for(int i=0; i<pos; i++){
            temp = temp->link;
        }
        temp->data = item;
    }
}

void search(ListNode* last, int item){
    int length = get_length(last);
    ListNode* temp = last;
    if(last == NULL){
        printf("List is empty\n");
        return;
    }
    for(int i=1; i<=length; i++){
        temp = temp->link;
        if(temp->data == item){
            printf("%d's position is %d\n", item, i);
            return;
        }
    }
    printf("No data about %d\n", item);
}

void display(ListNode* last){
    int length = get_length(last);
    ListNode* temp = last;
    if(temp == NULL){
        printf("List is empty\n");
        return;
    }
    for(int i=1; i<=length; i++){
        temp = temp->link;
        printf("[%d] : %d\n", i, temp->data);
    }
}

int main(){
    ListNode* list;
    int menu, item, pos, length;
    init(&list);
    
    while(menu != 99){
        printf("1. Add_First 2. Add_Last 3. Delete 4. Clear 5. Replace 6. Search 7. Length 8. Display 99. Exit\n");
        printf(">> ");
        scanf("%d", &menu);
    
        switch(menu){
            case 1:
                printf("Enter the number : ");
                scanf("%d", &item);
                add_first(&list, item);
                break;
            case 2:
                printf("Enter the number : ");
                scanf("%d", &item);
                add_last(&list, item);
                break;
            case 3:
                printf("Enter the position : ");
                scanf("%d", &pos);
                delete(&list, pos);
                break;
            case 4:
                clear(&list);
                break;
            case 5:
                printf("Enter the position : ");
                scanf("%d", &pos);
                printf("Enter the number : ");
                scanf("%d", &item);
                replace(list, pos, item);
                break;
            case 6:
                printf("Enter the number : ");
                scanf("%d", &item);
                search(list, item);
                break;
            case 7:
                length = get_length(list);
                printf("List's length is %d\n", length);
                break;
            case 8:
                display(list);
                break;
            case 99:
                break;
            default:
                printf("Menu Selection Error\n");
        }
    }
    
    return 0;
}
