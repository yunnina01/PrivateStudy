#include <stdio.h>
#include <stdlib.h>

typedef struct ListNode{
    int data;
    struct ListNode* llink;
    struct ListNode* rlink;
}ListNode;

typedef struct {
    ListNode* head;
    int length;
}DCListType;

void init(DCListType** L){
    (*L)->head = NULL;
    (*L)->length = 0;
}

void get_node(int item){
    ListNode* new_node = (ListNode*)malloc(sizeof(ListNode*));
    if(new_node == null)
        printf("Memory Allocation Error\n");
    else{
        new_node->data = item;
        new_node->llink = new_node;
        new_node->rlink = new_node;
    }
    return new_node;
}

void add_first(DCListType** L, int item){
    ListNode* new_node = get_node(item);
    if(new_node == NULL)
        return;
    if((*L)->head != NULL){
        ListNode* temp = (*L)->head;
        while(temp->rlink != (*L)->head){
            temp = temp->rlink;
        }
        new_node->llink = temp;
        new_node->rlink = (*L)->head;
        temp->rlink = new_node;
        (*L)->head->llink = new_node;
    }
    (*L)->head = new_node;
    (*L)->length++;
}

void add_last(DCListType** L, int item){
    ListNode* new_node = get_node(item);
    if(new_node == NULL)
        return;
    if((*L)->head == NULL)
        (*L)->head = new_node;
    else{
        ListNode* temp = (*L)->head;
        while(temp->rlink != (*L)->head){
            temp = temp->rlink;
        }
        new_node->llink = temp;
        new_node->rlink = (*L)->head;
        temp->rlink = new_node;
        (*L)->head->llink = new_node;
    }
    (*L)->length++;
}

void add(DCListType** L, int pos, int item){
    if(pos <= 0 || pos > (*L)->length + 1)
        printf("Position Input Error\n");
    else if(pos == 1)
        add_first(L, item);
    else if(pos == (*L)->length + 1)
        add_last(L, item);
    else{
        ListNode* new_node = get_node(item);
        if(new_node == NULL)
            return;
        ListNode* temp = (*L)->head;
        for(int i=0; i<pos-2; i++){
            temp = temp->rlink;
        }
        new_node->llink = temp;
        new_node->rlink = temp->rlink;
        temp->rlink->llink = new_node;
        temp->rlink = new_node;
        (*L)->length++;
    }
}

void delete(DCListType** L, int pos){
    
}

int main(){
    DCListType* list;
    int menu, item, pos;
    init(&list);
    
    while(menu != 99){
        printf("1. Add_First 2. Add_Last 3. Add 4. Delete 5. Clear 6. Replace 7. Search 8. Length 9. Display 99. Exit\n");
        printf(">> ");
        
    }
}
